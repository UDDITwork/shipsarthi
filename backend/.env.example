# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shipsarthi?retryWrites=true&w=majority

# MongoDB Atlas Options (Optional)
MONGODB_OPTIONS_POOL_SIZE=10
MONGODB_OPTIONS_BUFFER_MAX_ENTRIES=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
JWT_EXPIRE=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for sending emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Delhivery API Configuration (for logistics integration)
DELHIVERY_API_URL=https://track.delhivery.com/api
DELHIVERY_API_KEY=your-delhivery-api-key

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Payment Gateway Configuration (Razorpay)
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_SECRET=your_razorpay_secret_here

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379