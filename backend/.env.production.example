# Production Backend Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shipsarthi

# WebSocket Configuration
WS_PORT=5000
WS_HOST=api.shipsarthi.com
WS_PROTOCOL=wss

# Security
JWT_SECRET=your-production-jwt-secret-key
ADMIN_EMAIL=udditalerts247@gmail.com
ADMIN_PASSWORD=your-production-admin-password

# External Services
DELHIVERY_API_KEY=your-production-delhivery-api-key
DELHIVERY_API_URL=https://track.delhivery.com/api

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASS=your-production-app-password

# SMS Configuration
MSG91_API_KEY=your-production-msg91-api-key
MSG91_SENDER_ID=your-production-sender-id

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-production-cloud-name
CLOUDINARY_API_KEY=your-production-api-key
CLOUDINARY_API_SECRET=your-production-api-secret

# Logging
LOG_LEVEL=error
LOG_FILE_PATH=/var/log/shipsarthi

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://shipsarthi.com
CORS_CREDENTIALS=true
